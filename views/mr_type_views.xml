<odoo>
    <data>
        <record model="ir.ui.view" id="mr_type_tree">
            <field name="name">movie_rental type</field>
            <field name="model">mr.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mr_type_form">
            <field name="name">movie_rental type</field>
            <field name="model">mr.type</field>

            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2" string="Type data">
                            <field name="name" />
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>